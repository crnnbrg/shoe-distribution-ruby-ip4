<h3>Store <%= @store.name%></h3>
<hr>
<h3>Shoe Brands in Stock</h3>

<%if @brands.any?() %>
    <% @brands.each do |brand| %>
        <a href="/brand/<%= brand.id%>"><%= brand.name%></a>
    <%end%>
<%else%>
<p>No shoe brand in stock</p>
<%end%>
<br>
<br>
<!-- <button class="btn">Stock New Brands</button><br> -->
<div class="col-md-6">
    <form class="form-group" action="/stores/new_stock" method="post">
        <input type="hidden" name="store_id" value="<%= @store.id%>">
        <label>Select Brand to Stock</label>
        <select class="form-control" id="select" name="select">
            <% @allbrands.each do |item|%>
                <option value="<%= item.id%>"><%= item.name%></option>
            <%end%>
        </select>
        <button class="btn" type="submit">Stock Brand</button>
    </form>
</div>