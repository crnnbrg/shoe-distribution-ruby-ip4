<div class="container">
    <div class="row">
        <h3 class="h3 text-primary"><%= @brand.name%></h3>
        <p><%= @brand.category%></p>
        <p><%= @brand.gender%></p>
        <h3 class="text-success">Store You Can Buy</h3>
        <%if @stores.any?()%>
            <% @stores.each do |store|%>
                <a href="/store/<%= store.id%>"><%= store.name%></a><br>
            <%end%>
        <%else%>
            <p>No stores selling this brand</p>
        <%end%>
    </div>
</div>